<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tomahawk.tomahawk_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TomahawkMainActivity"
            android:label="@string/title_activity_tomahawk_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="tomahawk_browse_activity" android:name=".BrowseActivity"></activity>
        <activity android:label="tomahawk_friends_activity" android:name=".FriendsActivity"></activity>
        <activity android:label="tomahawk_mymusic_activity" android:name=".MyMusicActivity"></activity>
    </application>

</manifest>