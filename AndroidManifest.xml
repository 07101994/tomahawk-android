<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tomahawk.tomahawk_android"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.STATUS_BAR" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.DUMP" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name="TomahawkApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/appname_string"
        android:theme="@style/Theme.tomahawk.nativeandroid" >
        <activity
            android:name="org.tomahawk.tomahawk_android.TomahawkMainActivity"
            android:label="@string/mainactivity_title_string"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.tomahawk.libtomahawk.audio.PlaybackActivity"
            android:label="@string/playbackactivity_title_string"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="org.tomahawk.tomahawk_android.CollectionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/mainactivity_title_string"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="org.tomahawk.tomahawk_android.SearchableActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/searchactivity_title_string"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <service
            android:name="org.tomahawk.libtomahawk.audio.PlaybackService"
            android:label="@string/playbackservice_label_string"
            android:stopWithTask="true" >
        </service>
    </application>

</manifest>